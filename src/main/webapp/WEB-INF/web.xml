<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Login -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>org.sistema.acompanhamento.tarefas.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/loginUsuario</url-pattern>
    </servlet-mapping>

    <!--Cadastro-->
    <servlet>
        <servlet-name>CadastroController</servlet-name>
        <servlet-class>org.sistema.acompanhamento.tarefas.controller.CadastroController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/cadastraUsuario</url-pattern>
    </servlet-mapping>

    <!--Usuario-->
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>org.sistema.acompanhamento.tarefas.controller.UsuarioController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/listaUsuarios</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>